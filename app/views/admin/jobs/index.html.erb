<div class="col-md-12">
  <div class="group">
    <%= link_to("添加职位", new_admin_job_path, class: "btn btn-primary pull-right")%>
  </div>

  <table class="table table-boldered table-striped custab">
    <thead>
      <tr>
        <th>#</th>
        <th>职位</th>
        <th>工作种类</th>
        <th>投递简历数</th>
        <th>工资</th>
        <th>公司名称</th>
        <th>工作地点</th>
        <th>发布时间</th>
        <th>管理选项</th>

      </tr>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td>
            <%= render_job_status(job) %>
            <%= link_to(job.title, admin_job_path(job))%></td>
          <td><%= link_to(job.category_name, '/jobs/search?utf8=✓&q=' + job.category_name) %> </td>
          <td><%= link_to(job.resumes.count, admin_job_resumes_path(job)) %>
          <td><span class="label label-default"><%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %></span> </td>
          <td><%= link_to(job.company_name, '/jobs/search?utf8=✓&q=' + job.company_name) %></td>
          <td><span class="fa fa-map-marker"></span> <%= job.location %> </td>
          <td><%= job.created_at %></td>
          <td>
              <%= link_to("编辑", edit_admin_job_path(job), class: "btn btn-xs btn-info")%>|
              <%= link_to("删除", admin_job_path(job), method: :delete, class: "btn btn-xs btn-danger", data: {confirm: "你确定删除职位吗？"})%>|

                <% if job.is_hidden %>
                  <%= link_to("公开", publish_admin_job_path(job), :method => :post, class: "btn btn-xs btn-success") %>
                <% else %>
                  <%= link_to("隐藏", hide_admin_job_path(job), :method => :post, class: "btn btn-xs btn-warning") %>
                <% end %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

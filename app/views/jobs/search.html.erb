<div>
  <br>
<% if @query_string.blank? %>
    <div class="search-info-title">
      搜索关键词不能为空
    </div>

  <% elsif @jobs.blank? %>
    <br>
    <h2 class="search-info-title">搜索信息不能为空，请输入关键字搜索</h2>
  <% else %>
  <h2 class="search-info-title"> 有关"<%= @query_string %>"的工作信息 </h2>
  <table class="table table-hover table-boldered table-striped custab">
    <thead>
      <tr>
        <th>职位</th>
        <th>简介</th>

        <% if !current_user || !current_user.is_admin? %>
        <th>申请职位</th>
        <% end %>
      </tr>
    </thead>
      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td><%= link_to(render_highlight_content(job,@query_string), job_path(job)) %></td>
            <td><%= job.description %> </td>
            <td><%= link_to("申请职位", new_job_resume_path(job), class: "btn btn-primary btn-sm")%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= will_paginate(@jobs, renderer: BootstrapPagination::Rails) %>
    </div>
  <% end %>
</div>
